{
  "source": ["properties/color/*.json", "properties/size/*.json"],
  "platforms": {
    "js": {
      "transformGroup": "js",
      "buildPath": "src/generated/",
      "files": [
        {
          "destination": "colors.js",
          "format": "javascript/es6",
          "filter": {
            "attributes": {
              "category": "color"
            }
          }
        },
        {
          "destination": "sizes.js",
          "format": "javascript/es6",
          "filter": {
            "attributes": {
              "category": "size"
            }
          }
        }
      ]
    }
  }
}
